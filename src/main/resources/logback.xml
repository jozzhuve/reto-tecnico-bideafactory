<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <timestamp key="byDate" datePattern="yyyyMMdd"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%date [%thread] %-5level %logger{76}:%line - %msg [CORR_ID=%X{type}]%n</pattern>
        </encoder>
    </appender>

    <appender name="LOGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path:-./build}/logs/reto-tecnico-bideafactory.log</file>
        <append>true</append>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%date [%thread] %-5level %logger{76}:%line - %msg [CORR_ID=%X{type}]%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path:-./build}/logs/reto-tecnico-bideafactory-%d{yyyy-MM-dd}-%i.log.zip
            </fileNamePattern>
            <maxHistory>10</maxHistory>
            <maxFileSize>10MB</maxFileSize>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <appender name="TIMES_STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d | %X{correlationId} | %X{type} | %X{startTime} | %X{endTime} | %X{status} | %X{endPoint} |
                %X{typeError} | %X{servicePath} | %X{message} | %X{stackTrace1} | %X{stackTrace2} | %X{requestBody} %n
            </pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <logger name="TIME_LOGGER" level="INFO" additivity="false">
        <appender-ref ref="TIMES_STDOUT"/>
    </logger>
    <logger name="httpclient" level="WARN"/>
    <logger name="pe.bideafactory.api.booking" level="DEBUG"/>
    <logger name="org.springframework" level="INFO"/>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="LOGFILE"/>
    </root>

</configuration>
